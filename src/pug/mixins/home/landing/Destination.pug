mixin Destination 
  +Section.pt-9.pb-10.overflow-hidden
    .position-absolute.start-100.bottom-0.translate-middle-x
      img(src=`${CWD}assets/img/dest/shape.svg`, alt="destination")
    div.mb-7
      +SectionTitle('center', 'Top Selling', 'Top Destinations')
    .row 
      each val in destinations
        +DestinationCard(val)
